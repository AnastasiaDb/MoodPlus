<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние кнопки, когда она не нажата -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Устанавливаем радиус скругления углов -->
            <solid android:color="@color/background_button" /> <!-- Цвет кнопки в ненажатом состоянии -->
        </shape>
    </item>
    <!-- Состояние кнопки, когда она нажата -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Устанавливаем радиус скругления углов -->
            <solid android:color="@color/background_button_change" /> <!-- Цвет кнопки в нажатом состоянии -->
        </shape>
    </item>
</selector>
